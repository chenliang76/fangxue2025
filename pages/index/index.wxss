.container {
  padding: 20px;
  text-align: center;
}

.logo {
  width: 90%;
  margin: 0 auto 5px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.grade-group {
  margin-bottom: 20px;
}

.grade-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.classes {
  display: flex;
  flex-wrap: wrap;
  justify-content: left;
}

.class-tag {
  padding: 5px 5px;
  font-size: 90%;
  margin: 5px;
  border: 1px solid rgb(0, 0, 0);
  border-radius: 5px;
  background-color: rgb(255, 255, 255);
  width: calc(25% - 10px);
  box-sizing: border-box;
}

.class-tag.selected {
  background-color: red;
  color: #fff;
}
  