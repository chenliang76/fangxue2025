.container {
  padding: 20px;
  text-align: center;

}

.input-group {
  margin-bottom: 20px;
}

.input-group input {
  width: 100%;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-sizing: border-box;
  
}

.btn-login {
  width: 30%;
  padding: 10px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}